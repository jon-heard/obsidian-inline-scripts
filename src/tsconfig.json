{
	"compilerOptions":
	{
		// Basic settings
		"baseUrl": ".",
		"outFile": "../main.js",
		"target": "ES6",
		"lib": [ "DOM", "ES2021" ],

		// Debug info
		"inlineSourceMap": false,
		"inlineSources": false,

		// Error @ compile as much as possible
		"noImplicitAny": true,
		"checkJs": true,

		// Minify output
		"removeComments": true
	},

	// File ordering
	"include":
	[
		"globals.ts",
		"*.ts"
	]
}
